<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.xialincn.fakepathbuttondemo.MainActivity$MainActivity">

    <ImageButton
        android:id="@+id/reset_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_refresh_golden_24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector"
        android:scaleType="fitXY"
        android:clickable="true"/>

    <io.github.xialincn.fakepathbutton.FakePathButton
        android:id="@+id/float_action_button"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

    </io.github.xialincn.fakepathbutton.FakePathButton>

</RelativeLayout>